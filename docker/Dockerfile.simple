FROM python:3.9-slim

# Instalar solo las dependencias b치sicas
RUN apt-get update && apt-get install -y \
    libpq5 \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Crear directorio de trabajo
WORKDIR /app

# Copiar c칩digo
COPY . /app

# Instalar dependencias Python b치sicas
RUN pip install --no-cache-dir \
    flask \
    gunicorn \
    streamlit \
    psycopg2-binary \
    redis \
    requests \
    pandas \
    plotly \
    dash \
    python-dotenv \
    werkzeug \
    sqlalchemy

# Variables de entorno b치sicas
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Exponer puerto
EXPOSE 8050

# Comando simple
CMD ["python", "main.py"] 